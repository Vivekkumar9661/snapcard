{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "module": "commonjs",
        "outDir": "dist",
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "noEmit": false,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "isolatedModules": false
    },
    "include": [
        "server.ts",
        "src/**/*"
    ]
}